<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.swarmnyc.watchfaces.WeatherWatchFaceConfigActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/preview"
            style="@style/TitleLabel" />

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/preview_weather_1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/main_margin"
            android:contentDescription="@string/preview_image" />

        <View style="@style/HorizontalLine" />

        <TextView
            style="@style/TitleLabel"
            android:text="@string/color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cclorbutton_container"
            android:layout_marginTop="@dimen/main_margin"
            android:layout_marginBottom="@dimen/main_margin">

            <Button
                android:id="@+id/colorbutton1"
                style="@style/ColorButton"
                android:background="@drawable/color_button_1" />

            <Button
                android:id="@+id/colorbutton2"
                style="@style/ColorButton"
                android:background="@drawable/color_button_2" />

            <Button
                android:id="@+id/colorbutton3"
                style="@style/ColorButton"
                android:background="@drawable/color_button_3" />

            <Button
                android:id="@+id/colorbutton4"
                style="@style/ColorButton"
                android:background="@drawable/color_button_4" />
        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <TextView
            style="@style/TitleLabel"
            android:text="@string/clock_settings" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_mode"
            android:id="@+id/switch_time_unit"
            android:layout_marginTop="@dimen/main_margin"
            android:layout_marginBottom="@dimen/main_margin" />

        <View style="@style/HorizontalLine" />

        <TextView
            style="@style/TitleLabel"
            android:text="@string/weather" />

        <TextView
            android:text="@string/unit"
            android:layout_marginTop="@dimen/main_margin"
            android:layout_marginBottom="@dimen/main_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scaleRadioGroup"
            android:layout_marginLeft="@dimen/main_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:id="@+id/celsiusRadioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fahrenheit"
                android:id="@+id/fahrenheitRadioButton" />
        </RadioGroup>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/update_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/intervalSpinner"
                android:entries="@array/interval_array"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#00b5cf">
            <ImageView
                android:layout_margin="@dimen/main_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/company_info" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
